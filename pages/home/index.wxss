page {
  background-color: #f4f5f6;
}
.navbar {
  position: fixed;
  width: 100%;
  top: 0;
  z-index: 9999999;
}
.navbar text {
  position: absolute;
  text-align: center;
  max-width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  font-size: 32rpx;
  color: #fff;
  font-weight: 500;
}
.banner {
  width: 100%;
}
.banner image {
  width: 100%;
}
.home-list {
  transform: translateY(-110rpx);
  margin: 0 40rpx;
}
.home-list-item {
  width: 100%;
  padding: 56rpx 40rpx;
  background: #ffffff;
  box-shadow: 0px 0px 20rpx 0px rgba(0, 0, 0, 0.2);
  border-radius: 20rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}
.home-list-item .item-img {
  margin-right: 20rpx;
  width: 124rpx;
  height: 124rpx;
  border-radius: 100%;
  flex: none;
}
.home-list-item .item-title {
  font-size: 40rpx;
  color: #000000;
  line-height: 56rpx;
  letter-spacing: 1rpx;
}
.home-list-item .item-content {
  margin-top: 15rpx;
  font-size: 26rpx;
  color: #808080;
  line-height: 36rpx;
}
.home-footer {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
}
