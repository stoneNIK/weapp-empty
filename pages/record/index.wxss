.record-list-item {
  margin: 20rpx;
  padding: 0 30rpx;
  background: #ffffff;
  border-radius: 10rpx;
  border: 2rpx solid #ebebeb;
}
.record-list-item .record-title {
  font-size: 30rpx;
  color: #333333;
  line-height: 42rpx;
  padding: 20rpx 0;
  box-shadow: 0px 2rpx 0px 0px #ebebeb;
}
.record-list-item .record-content {
  padding: 20rpx 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.record-list-item .record-content .record-info {
  font-size: 28rpx;
  color: #4d4d4d;
  line-height: 40rpx;
}
.record-list-item .record-content:last-child {
  flex: none;
}
