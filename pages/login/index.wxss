.header {
  margin: 90rpx;
  padding: 30rpx;
  border-bottom: 1px solid #ccc;
  text-align: center;
  box-sizing: border-box;
}

.header .avatar {
  margin: 20rpx auto;
  width: 200rpx;
  height: 200rpx;
  border-radius: 100%;
  overflow: hidden;
}

.content {
  margin-left: 50rpx;
  margin-bottom: 90rpx;
}

.content text {
  display: block;
  color: #9d9d9d;
  margin-top: 40rpx;
}

.bottom {
  border-radius: 80rpx;
  margin: 70rpx 50rpx;
  font-size: 35rpx;
}
